include ../../lib/flash/messages

doctype html
html
  head
    meta(charset="utf-8")
    title
      block title
        | Quad Racing Manager
    block styles
      link(rel='stylesheet', href='/styles/global.css' )

body

  //- flash messages from messages lib
  messages()

  .header.pad
    h1.column1of3
      a(href='/') Quad Racing
    .column1of3
    .column1of3.pilot.tar
      if current_user
        a(href='/settings')= current_user.handle || current_user.name
        a(href="/signout") X
      else
        a(href='/signin') Login

  ul.menu.tar
    li: a(href='/events') Events
    li: a(href='/chapters') Chapters
    li: a(href='/pilots') Pilots

  .content.pad

    block content

  block scripts
    script(src="/scripts/compiled/components.js")
    script(src="/scripts/main.js")
